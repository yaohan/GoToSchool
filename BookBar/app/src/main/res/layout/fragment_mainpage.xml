<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:background="@color/search_gray">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_search" />

        <EditText
            android:id="@+id/et_main_search"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/search_gray"
            android:gravity="center_vertical"
            android:hint="请输入关键字进行搜索"
            android:layout_marginLeft="36dp"
            android:textColorHint="@color/search_hint"
            android:editable="false"/>
        <LinearLayout
            android:id="@+id/ll_main_scan"
            android:layout_width="28dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_scan" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_gray"/>
<RelativeLayout
    android:id="@+id/rl_main_library"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_main_library"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="当前图书馆：测试图书馆1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="切换>"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"/>
</RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_gray"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:text="推荐书目"
        android:paddingLeft="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:gravity="center_vertical"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <GridView
        android:id="@+id/gv_main_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="16dp"
        android:numColumns="3"/>
</LinearLayout>