<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tv_change_phone_number"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="手机号"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_change_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/tv_change_phone_number"
                android:background="@android:color/white"
                android:hint="请输入手机号码"
                android:textColor="@color/font_black"
                android:paddingLeft="32dp"
                android:inputType="number" />
        </RelativeLayout>

        <View
            android:id="@+id/v_change_phone_div"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide_gray" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tv_change_check"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="旧密码"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_change_check"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/tv_change_check"
                android:background="@android:color/white"
                android:hint="请输入旧密码"
                android:textColor="@color/font_black"
                android:paddingLeft="32dp"
                android:inputType="number" />
            <Button
                android:visibility="gone"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"/>
        </RelativeLayout>

        <View
            android:id="@+id/v_change_check_div"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide_gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tv_change_password"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="密码"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_change_password"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/tv_change_password"
                android:background="@android:color/white"
                android:hint="请输入新密码"
                android:paddingLeft="32dp"
                android:textColor="@color/font_black"
                android:inputType="textPassword"/>
        </RelativeLayout>

        <View
            android:id="@+id/v_change_password_div"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide_gray" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tv_change_password_again"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="确认密码"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_change_password_again"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/tv_change_password_again"
                android:background="@android:color/white"
                android:hint="请再次输入新密码"
                android:textColor="@color/font_black"
                android:paddingLeft="32dp"
                android:inputType="textPassword" />
        </RelativeLayout>
        <View
            android:id="@+id/v_change_password_again_div"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide_gray" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/bt_change_password"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:text="修改" />


    </LinearLayout>
</LinearLayout>