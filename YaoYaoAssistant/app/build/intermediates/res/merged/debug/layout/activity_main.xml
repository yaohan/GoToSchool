<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_green"
        android:padding="@dimen/margin_space_32"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_main_sum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="总金额*元"
            android:textColor="@color/font_white"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建新账户"
            android:textColor="@color/font_white"
            android:paddingTop="@dimen/margin_space_16"
            android:textSize="16sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_main_account"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/touch_view_48"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_main_income"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/background_white"
            android:text="收入"
            android:textColor="@color/font_green"
            android:textSize="20sp"
            android:gravity="center"/>
        <Button
            android:id="@+id/bt_main_outlay"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/theme_green"
            android:text="支出"
            android:textColor="@color/font_white"
            android:textSize="20sp"
            android:gravity="center"/>
        <Button
            android:id="@+id/bt_main_transfer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/background_white"
            android:text="转账"
            android:textColor="@color/font_green"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
