<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tv_newpaper_library"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="图书馆"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_newpaper_select"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/tv_newpaper_library"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="@android:color/white"
                android:hint="请选择图书馆"
                android:textColor="@color/font_black"
                android:paddingLeft="32dp"
                android:inputType="number"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/v_newpaper_select"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide_gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tv_newpaper_number"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="编号"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_newpaper_number"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/tv_newpaper_number"
                android:background="@android:color/white"
                android:hint="请输入密码"
                android:textColor="@color/font_black"
                android:paddingLeft="32dp"
                android:inputType="number" />
        </RelativeLayout>

        <View
            android:id="@+id/v_et_newpaper_number"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divide_gray" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/bt_new_paper"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>