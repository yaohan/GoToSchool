<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide_gray">
    <View
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:background="@color/divide_gray"/>
    <LinearLayout
        android:id="@+id/ll_person_info"
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:gravity="center_vertical"
        android:background="@color/background_white">
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="@dimen/tab_height"
            android:layout_height="@dimen/tab_height"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_person_name"
            android:layout_marginLeft="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="188****4301"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:background="@color/divide_gray"/>
    <LinearLayout
        android:id="@+id/ll_person_paperwork"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:background="@color/background_white">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="我的证件"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_gray"/>
    <LinearLayout
        android:id="@+id/ll_person_change"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:background="@color/background_white">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="更改密码"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_gray"/>

    <LinearLayout
        android:id="@+id/ll_person_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:background="@color/background_white">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="版本更新"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_gray"/>
    <LinearLayout
        android:id="@+id/ll_person_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:background="@color/background_white">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="联系我们"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_gray"/>
    <LinearLayout
        android:id="@+id/ll_person_use"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:background="@color/background_white">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="使用手册"/>
    </LinearLayout>


    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_gray"/>
    <LinearLayout
        android:id="@+id/ll_person_train"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:background="@color/background_white">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="训练阶段"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/divide_gray"/>
    <Button
        android:id="@+id/bt_person_logout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:text="退出登录"
        android:textSize="18sp"
        android:background="@color/colorPrimary"
        android:layout_margin="16dp"/>
</LinearLayout>